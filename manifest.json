{
  "manifest_version": 2,
  "name": "Enhanced Network Tab",
  "version": "1.5",
  "description": "A lightweight security analysis tool for capturing and modifying HTTP/S requests",
  "browser_specific_settings": {
  "gecko": {
    "id": "@enhanced-network-tab"
  }
},
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "activeTab",
    "contextMenus",
    "storage",
    "clipboardWrite",
    "<all_urls>"
  ],
  
  "background": {
    "scripts": ["background/background.js"],
    "persistent": true
  },
  
  "browser_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "64": "icons/icon64.png",
      "96": "icons/icon96.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Enhanced Network Tab - Click to toggle"
  },
  
  "devtools_page": "devtools/devtools.html",
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "96": "icons/icon96.png",
    "128": "icons/icon128.png"
  }
}